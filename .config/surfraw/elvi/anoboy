#!/bin/sh
# elvis: anoboy -- Search anime on Anoboy
# Author: Your Name

. surfraw || exit 1

w3_config_hook() {
	def SURFRAW_anoboy_url "https://ww1.anoboy.app"
}

w3_usage_hook() {
	cat <<EOF
Usage: $w3_argv0 [options] [search-string]
Description:
  Search anime on Anoboy (https://ww1.anoboy.app)

Local options
 -url=URL              Base URL for Anoboy (default: https://ww1.anoboy.app)
 -u=URL
                                Environment: SURFRAW_anoboy_url
                                Default: https://ww1.anoboy.app
EOF
	w3_global_usage
}

w3_parse_option_hook() {
	opt="$1"
	optarg="$2"
	case "$opt" in
	-url=*) setopt SURFRAW_anoboy_url "$optarg" ;;
	-u=*) setopt SURFRAW_anoboy_url "$optarg" ;;
	*) return 1 ;;
	esac
	return 0
}

w3_config
w3_parse_args "$@"
# w3_args now contains list of arguments

base_url="$SURFRAW_anoboy_url"

# Construct the URL
if [ -z "$w3_args" ]; then
	w3_browse_url "${base_url}"
else
	escaped_args=$(w3_url_of_arg "$w3_args")
	w3_browse_url "${base_url}/?s=${escaped_args}"
fi
